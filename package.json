{
  "name": "chu",
  "version": "1.0.0",
  "private": true,
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "chu-scripts bootstrap",
    "build": "turbo run build",
    "build:deps": "chu-scripts bundleDeps",
    "dev": "turbo run dev --parallel",
    "format": "prettier --cache --write .",
    "format:docs": "prettier 'docs/**/*.{md,mdx}' --write --ignore-path .gitignore --ignore-unknown",
    "format:plugin-docs": "prettier 'packages/plugin-docs/**/*' --write --ignore-unknown",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "chu-scripts postinstall",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "turbo:clean": "rimraf .turbo"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --cache --write"
    ],
    "*.ts?(x)": [
      "prettier --cache --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@chu/utils": "workspace:*",
    "@pnpm/lockfile-file": "^5.3.1",
    "@pnpm/logger": "^4.0.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.12",
    "@types/resolve": "^1.20.2",
    "@vercel/ncc": "0.33.3",
    "chalk": "5.0.1",
    "cross-spawn": "7.0.3",
    "dts-packer": "^0.0.3",
    "father": "^2.30.21",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-playwright-preset": "^1.7.2",
    "lerna": "^5.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "^2.2.18",
    "resolve": "^1.22.1",
    "ts-node": "^10.8.2",
    "tsup": "^6.2.1",
    "tsx": "^3.8.0",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4",
    "zx": "^7.0.7"
  },
  "packageManager": "pnpm@7.4.0",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "compiledConfig": {
    "deps": [
      "chalk",
      "cross-spawn",
      "fs-extra"
    ],
    "externals": {
      "chalk": "$$LOCAL",
      "cross-spawn": "$$LOCAL",
      "fs-extra": "$$LOCAL"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "antd",
        "dva",
        "postcss",
        "webpack",
        "eslint",
        "stylelint",
        "redux"
      ]
    }
  }
}
